<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App1.FirstQuestionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Padding="20">
            <TextBlock x:ConnectionId='2' x:Name="TitleTextBlock" FontSize="24" FontWeight="Bold" TextWrapping="Wrap"/>
            <TextBlock x:ConnectionId='3' x:Name="BodyTextBlock" Margin="0,10,0,20" FontSize="18" TextWrapping="Wrap"/>
            <StackPanel x:ConnectionId='4' x:Name="AnswerList" />
        </StackPanel>

    </Grid>
</Page>

