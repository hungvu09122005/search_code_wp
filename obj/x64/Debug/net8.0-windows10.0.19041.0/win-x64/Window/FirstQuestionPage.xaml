<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App1.FirstQuestionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Padding="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxWidth="800"
                    Spacing="10">

            <!-- Tiêu đề câu hỏi -->
            <TextBlock x:ConnectionId='2' x:Name="TitleTextBlock"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       TextAlignment="Left"
                       Margin="0,0,0,10"/>

            <!-- Nội dung câu hỏi -->
            <TextBlock x:ConnectionId='3' x:Name="BodyTextBlock"
                       FontSize="18"
                       Foreground="White"
                       TextWrapping="Wrap"
                       TextAlignment="Left"
                       Margin="0,0,0,20"/>

            <!-- Danh sách đáp án -->
            <ItemsControl x:ConnectionId='4' x:Name="AnswerList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button x:ConnectionId='5' Content="{Binding Text}"
                                Tag="{Binding IsCorrect}"
                                                         
                                Height="40"
                                Margin="20 5 20 5"
                                FontSize="16"
                                Background="LightGray"
                                CornerRadius="8"
                                HorizontalAlignment="Center"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Page>

