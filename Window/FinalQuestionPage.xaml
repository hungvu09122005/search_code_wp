<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App1.Window.FinalQuestionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1.Window"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid>
    <!--
        StackPanel căn giữa nội dung trang, có padding và spacing giữa các thành phần.
        - Padding="20": Khoảng cách lề bên trong StackPanel.
        - HorizontalAlignment="Center": Căn giữa theo chiều ngang.
        - VerticalAlignment="Center": Căn giữa theo chiều dọc.
        - MaxWidth="800", MinWidth="600": Giới hạn chiều rộng tối đa và tối thiểu.
        - Spacing="10": Khoảng cách giữa các phần tử con.
    -->
    <StackPanel Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="800"
                MinWidth="600"
                Spacing="10">

            <!--
            TitleTextBlock: Hiển thị tiêu đề của câu hỏi.
            - FontSize: Cỡ chữ lớn.
            - FontWeight: In đậm.
            - Foreground: Màu chữ trắng.
            - Margin: Khoảng cách dưới 10px.
            -->
            <Button x:Name="TitleTextBlock"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="#AA000000"
                    BorderThickness="2"
                    Padding="10"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,10"
                    IsHitTestVisible="False"/>

            <!--
            BodyTextBlock: Hiển thị nội dung chi tiết của câu hỏi.
            - FontSize: Cỡ chữ vừa.
            - Foreground: Màu chữ xám nhạt.
            - TextWrapping: Tự động xuống dòng.
            -->
            <Button x:Name="BodyButton"
                    Background="#AA000000"
                    BorderThickness="2"
                    Padding="10"
                    HorizontalAlignment="Left"
                    Width="800"
                    IsHitTestVisible="False">
                <TextBlock x:Name="BodyTextBlock"
                           FontSize="24"
                           Foreground="White"
                           TextWrapping="Wrap"
                           Width="750"
                           TextTrimming="CharacterEllipsis"/>
            </Button>

            <!--
            AnswerList: Danh sách các đáp án cho câu hỏi.
            - Sử dụng ItemsControl để hiển thị danh sách đáp án.
            - ItemsPanel là StackPanel nằm ngang, căn giữa.
            - Mỗi đáp án là một Button với nội dung và trạng thái đúng/sai.
            -->
        <ItemsControl x:Name="AnswerList">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!--
                        StackPanel nằm ngang để các đáp án hiển thị cạnh nhau.
                        - Orientation="Horizontal": Xếp các phần tử theo chiều ngang.
                        - HorizontalAlignment="Center": Căn giữa các đáp án.
                    -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!--
                        Button đại diện cho một đáp án.
                        - Content="{Binding Text}": Hiển thị nội dung đáp án.
                        - Tag="{Binding IsCorrect}": Lưu trạng thái đúng/sai.
                        - Click="AnswerButtonClick": Xử lý khi người dùng chọn đáp án.
                        - Height="40": Chiều cao nút.
                        - Margin="20 5 20 5": Lề quanh nút.
                        - FontSize="16": Cỡ chữ.
                        - MinWidth="80": Chiều rộng tối thiểu.
                        - Background="LightGray": Màu nền xám nhạt.
                        - CornerRadius="8": Bo góc nút.
                        - HorizontalAlignment="Center": Căn giữa nút.
                    -->
                    <Button Content="{Binding Text}"
                            Tag="{Binding IsCorrect}"
                            Click="AnswerButtonClick"
                            Height="40"
                            Margin="20 5 20 5"
                            FontSize="16"
                            MinWidth="80"
                            Background="#1E1E1E"
                            CornerRadius="8"
                            HorizontalAlignment="Center"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</Grid>
</Page>
